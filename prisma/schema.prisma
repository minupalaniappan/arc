// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model PandemicOversightBusiness {
  id                            String    @id @default(uuid())
  borrower                      String
  loanAmount                    Float?
  amountForgiven                Float?
  loanStatus                    String?
  dateApproved                  DateTime?
  dateForgiven                  DateTime?
  payroll                       Float?
  rent                          Float?
  utilities                     Float?
  healthCare                    Float?
  mortageInterest               Float?
  debtInterest                  Float?
  refinancingEIDL               Float?
  notProvided                   Float?
  lenderName                    String?
  businessType                  String?
  industry                      String?
  industryDetailed              String?
  ageOfBusiness                 String?
  borrowerCity                  String?
  borrowerState                 String?
  borrowerZip                   String?
  borrowerCounty                String?
  borrowerCongressionalDistrict Int?
  jobsReported                  Int?
  gender                        String?
  race                          String?
}

model BizBuySellProduct {
  id              String   @id @default(uuid())
  name            String?
  logo            String?
  image           String?
  description     String?
  url             String?
  productId       String   @unique
  offerPrice      Float?
  priceCurrency   String?
  availability    Boolean?
  addressLocality String?
  addressRegion   String?
}
